  .cart-section {
  padding: 2rem 1rem;
  font-family: system-ui, -apple-system, sans-serif;
}

.cart-title {
  font-size: 2rem;
  margin-bottom: 1.5rem;
}

.cart-container {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
}

/* Left: Items */
.cart-items {
  flex: 1 1 60%;
  min-width: 280px;
}

.cart-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 1rem;
  background: #fff;
  gap: 1rem;
  flex-wrap: nowrap;
}

.item-image {
  width: 100px;
  height: 100px;
  border-radius: 8px;
  background: #f3f3f3;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 0.9rem;
  flex-shrink: 0;
}

.item-details {
  flex: 1;
  min-width: 100px;
}

.item-name {
  font-size: 1.1rem;
  margin-bottom: 0.25rem;
}

.item-price {
  font-weight: bold;
}

.item-actions {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-shrink: 0;
}

.qty-btn {
  width: 32px;
  height: 32px;
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 6px;
  font-size: 1rem;
  cursor: pointer;
}

.delete-btn {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: #444;
}

/* Right: Summary */
.order-summary {
  flex: 1 1 300px;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 1.5rem;
  background: #fafafa;
  height: fit-content;
}

.order-summary h3 {
  margin-bottom: 1rem;
  font-size: 1.3rem;
}

.summary-row,
.summary-total {
  display: flex;
  justify-content: space-between;
  margin: 0.4rem 0;
  font-size: 0.95rem;
}

.summary-total {
  font-weight: bold;
  font-size: 1.1rem;
}

.free-shipping-note {
  color: #666;
  font-size: 0.9rem;
  margin: 0.5rem 0 1rem;
}

.btn {
  width: 100%;
  padding: 0.9rem;
  border-radius: 8px;
  font-size: 1rem;
  cursor: pointer;
  margin-top: 0.6rem;
  transition: 0.3s;
}

.btn.primary {
  background: #000;
  color: #fff;
  border: none;
}

.btn.primary:hover {
  opacity: 0.9;
}

.btn.secondary {
  background: #fff;
  border: 1px solid #ccc;
}

/* ðŸ“± Mobile Responsive */
