<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>EasyApps || Payment</title>

  <link rel="icon" type="image/png" href="/multitenant/img/easyicon.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --left-bg: #f1f3f5;
      --right-bg: #ffffff;
    }

    html, body {
      height: 100%;
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .row-full {
      min-height: 100vh;
    }

    .g-0 {
      --bs-gutter-x: 0;
      --bs-gutter-y: 0;
    }

    .col-left {
      background: var(--left-bg);
    }

    .col-right {
      background: var(--right-bg);
    }

    .col-left,
    .col-right {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .payment-box {
      width: 100%;
      max-width: 420px;
      background: #ffffff;
      border-radius: 14px;
      padding: 32px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08);
      text-align: center;
    }

    .payment-logo {
      font-size: 1.6rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
    }

    .payment-heading {
      margin-bottom: 40px;
      color: #212529;
    }

    .payment-details p {
      margin-bottom: 0.4rem;
      color: #495057;
      font-size: 0.95rem;
    }

    .btn-pay {
      margin-top: 24px;
      width: 100%;
      height: 50px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 1rem;
      background: linear-gradient(135deg, #0d6efd, #198754);
      border: none;
      color: #fff;
      transition: all 0.25s ease;
    }

    .btn-pay:hover {
      transform: translateY(-1px);
      box-shadow: 0 10px 20px rgba(13, 110, 253, 0.25);
    }

    .btn-pay:active {
      transform: scale(0.98);
    }

    .btn-pay:disabled {
      background: #adb5bd;
      cursor: not-allowed;
    }

    .signup-image {
      max-width: 100%;
      max-height: 85vh;
      object-fit: contain;
    }

    @media (max-width: 767.98px) {
      .col-right {
        display: none;
      }

      .col-left {
        background: #fff;
        padding: 1rem;
      }

      .payment-box {
        box-shadow: none;
        padding: 20px;
      }

      .payment-heading {
        margin-bottom: 20px;
      }
    }
  </style>
</head>

<body>
  <div class="row g-0 row-full">

    <!-- RIGHT SIDE IMAGE -->
    <div class="col-12 col-md-6 col-right">
      <img
        class="signup-image"
        src="/multitenant/img/easylogo.png"
        alt="Payment illustration"
        onerror="this.onerror=null;this.src='https://via.placeholder.com/800x600?text=Payment'"
      >
    </div>

    <!-- LEFT SIDE PAYMENT -->
    <div class="col-12 col-md-6 col-left">
      <div class="payment-box">
        <div class="payment-logo">ðŸ’³ EasyApps</div>
        <h5 class="payment-heading">Complete Your Payment</h5>

        <div class="payment-details">
          <p><strong>Plan:</strong> <%= plan %></p>
          <p><strong>Email:</strong> <%= email %></p>
          <p><strong>Amount:</strong> â‚¦<%= price %></p>
        </div>

        <button
          type="button"
          id="pay-btn"
          class="btn-pay"
          data-email="<%= email %>"
          data-amount="<%= price %>"
          data-plan="<%= plan %>"
          data-tenant="<%= tenantId %>"
        >
          Pay â‚¦<%= price %>
        </button>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://js.paystack.co/v1/inline.js"></script>

  <script>
  document.getElementById("pay-btn").onclick = function () {
    const email = "<%= email %>";
    const amount = <%= price %> * 100; // Paystack expects kobo
    const reference = "EA_" + Date.now(); // unique reference

    const handler = PaystackPop.setup({
      key: "pk_test_bec2adfc8f46afff889349e2bf76e50477939d74",
      email: email,
      amount: amount,
      currency: "NGN",
      ref: reference,
      callback: function (response) {
        alert("Payment successful! Reference: " + response.reference);
      },
      onClose: function () {
        alert("Payment cancelled.");
      }
    });

    handler.openIframe();
  };
</script>

</body>
</html>
