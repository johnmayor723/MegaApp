 <style>

    body {
  background: #f9f8f8;
  
}
 .checkout-section {
  padding: 2rem 1rem;
  font-family: system-ui, -apple-system, sans-serif;
  max-width: 1200px;
  margin: auto;
}

.back-link {
  display: inline-block;
  margin-bottom: 1rem;
  color: #000;
  text-decoration: none;
  font-size: 0.95rem;
}

.checkout-title {
  font-size: 2rem;
  margin-bottom: 2rem;
}

.checkout-container {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
}

/* LEFT SIDE */
.shipping-form {
  flex: 1 1 60%;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 2rem;
  background: #fff;
}

.shipping-form h3 {
  margin-bottom: 1.5rem;
  font-size: 1.2rem;
}

.form-group {
  margin-bottom: 1rem;
  display: flex;
  flex-direction: column;
}

.form-group label {
  font-weight: 500;
  margin-bottom: 0.4rem;
  font-size: 0.95rem;
}

.form-group input {
  padding: 0.75rem;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1rem;
}

.form-row {
  display: flex;
  gap: 1rem;
}

.form-row .form-group {
  flex: 1;
}

/* RIGHT SIDE */
.order-summary {
  flex: 1 1 300px;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 1.5rem;
  background: #fafafa;
  height: fit-content;
}

.order-summary h3 {
  margin-bottom: 1.2rem;
  font-size: 1.2rem;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 0.8rem;
}

.item-image {
  width: 60px;
  height: 60px;
  background: #f3f3f3;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
  color: #999;
}

.item-name {
  font-weight: 500;
  font-size: 0.95rem;
}

.item-qty {
  color: #666;
  font-size: 0.85rem;
}

.item-price {
  font-weight: 500;
}

.summary-row,
.summary-total {
  display: flex;
  justify-content: space-between;
  font-size: 0.95rem;
  margin: 0.4rem 0;
}

.summary-total {
  font-weight: bold;
  font-size: 1.1rem;
  margin-top: 0.8rem;
}

.btn {
  width: 100%;
  padding: 0.9rem;
  border-radius: 8px;
  font-size: 1rem;
  cursor: pointer;
  margin-top: 1rem;
  transition: 0.3s;
}

.btn.primary {
  background: #000;
  color: #fff;
  border: none;
}

.btn.primary:hover {
  opacity: 0.9;
}

.terms-note {
  font-size: 0.85rem;
  color: #666;
  margin-top: 0.8rem;
  text-align: center;
}

.terms-note a {
  color: #000;
  text-decoration: underline;
}

/* üì± Mobile Responsive */
@media (max-width: 768px) {
  .checkout-container {
    flex-direction: column;
  }

  .shipping-form,
  .order-summary {
    width: 100%;
  }

  .form-row {
    flex-direction: column;
  }
}


 </style>
