<style>
  /* Add your custom styles here */
  .app-overview {
  padding: 24px;
  background: #f8f9fb;
  font-family: system-ui, -apple-system, sans-serif;
}

/* Header */
.app-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24px;
  gap: 20px;
}

.app-info {
  display: flex;
  gap: 16px;
}

.app-logo {
  width: auto;
  height: 64px;
  padding: 12px;
  background: #fff;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 12px;
  box-shadow: 0 1px 4px rgba(0,0,0,.08);
}

.app-text h2 {
  margin: 0;
  font-size: 22px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.app-text p {
  margin: 4px 0;
  color: #666;
}

.app-text small {
  color: #999;
}

.edit-icon {
  font-size: 14px;
  cursor: pointer;
  color: #888;
}

.app-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

/* Grid */
.overview-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
  margin-bottom: 20px;
}

/* Cards */
.card {
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 1px 6px rgba(0,0,0,.06);
}

.card h3 {
  margin: 0 0 6px;
  font-size: 18px;
}

.muted {
  color: #666;
  font-size: 14px;
  margin-bottom: 16px;
}

/* Forms */
.form-group select {
  width: 100%;
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #ddd;
}

.checkbox {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 12px;
  font-size: 14px;
}

/* Buttons */
.btn {
  padding: 10px 16px;
  border-radius: 8px;
  font-size: 14px;
  border: none;
  cursor: pointer;
}

.btn.primary {
  background: #2563eb;
  color: #fff;
}

.btn.secondary {
  background: #111827;
  color: #fff;
}

.btn.outline {
  background: transparent;
  border: 1px solid #ddd;
}

.btn.outline.danger {
  color: #dc2626;
  border-color: #fca5a5;
}

.invite-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

/* Platform badge */
.badge-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16px;
  flex-wrap: wrap;
}

/* Responsive */
@media (max-width: 768px) {
  .app-header {
    flex-direction: column;
  }

  .app-actions {
    width: 100%;
  }
}
    
</style>
<style>
/* Flyout Modal Styles */
.modal-flyout {
  position: fixed;
  top: 0;
  right: -400px; /* Hidden by default */
  width: 350px;
  height: 100%;
  background: #fff;
  box-shadow: -4px 0 12px rgba(0,0,0,0.15);
  z-index: 1000;
  padding: 20px;
  overflow-y: auto;
  transition: right 0.3s ease;
}

.modal-flyout.active {
  right: 0;
}

.modal-flyout .close {
  font-size: 24px;
  cursor: pointer;
  position: absolute;
  top: 12px;
  right: 16px;
  color: #888;
}

.modal-flyout h3 {
  margin-top: 0;
}

.modal-flyout input[type="text"],
.modal-flyout textarea {
  width: 100%;
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #ddd;
  margin-bottom: 12px;
}

.modal-flyout button {
  width: 100%;
}

/* Mobile */
@media (max-width: 768px) {
  .modal-flyout {
    width: 100%;
  }
}
</style>
<%
  const appSlug = session?.tenant.slug || 'Your App';
  const appUrl  = session?.user.url || '#';
  const tenant  = session?.tenant || {};
%>

<section class="app-overview">

  <!-- Header -->
  <div class="app-header">
    <div class="app-info">
      <div class="app-logo">
        <span style="font-weight: bolder;font-size: x-large;"><%=appSlug%></span>
      </div>

      <div class="app-text">
       <h2>
  
  <span class="edit-icon">âœŽ</span>
</h2>

<p>
  Store URL:
  <a style="color:#1b2026; text-decoration:none;" href="<%= appUrl %>" target="_blank">
       Your store url
  </a>
</p>

<small>Created recently</small>

      </div>
    </div>

    <div class="app-actions">
      <a style="color:#f4f6f9; text-decoration:none;" href="<%= appUrl %>" class="btn secondary">Open App</a>
      <a style="color:#1b1b1c; text-decoration:none;" href="#" class="btn outline">Share App <small>win free credits!</small></a>
    </div>
  </div>

  <!-- Cards -->
  <div class="overview-grid">

    <!-- App Visibility -->
    <div class="card">
      <h3>App Visibility</h3>
      <p class="muted">Control who can access your application</p>

      <div class="form-group">
        <select>
          <option>Public</option>
          <option>Private</option>
        </select>
      </div>

      <label class="checkbox">
        <input type="checkbox" checked />
        Require login to access
      </label>
    </div>

 <div class="card">
  <h3>Invite Users</h3>
  <p class="muted">Grow your user base by inviting others</p>

  <div class="invite-actions" style="display: flex; flex-wrap: wrap; gap: 10px; margin-top: 10px;">
    <!-- Invite buttons (always available) -->
    <button class="btn outline">Copy Link</button>
    <button class="btn outline">Send Invites</button>

    <% if (tenant.plan === 'free') { %>
      <!-- Free plan: Upgrade button -->
      <a href="/multitenant/new-compare-plans" class="btn primary" style="background-color: #2563eb; color: white;">Upgrade Plan</a>

      <% if (!tenant.domain) { %>
        <button class="btn primary" style="background-color: #10b981; color: white;" onclick="openModal('getDomainModal')">
          Get Custom Domain
        </button>
      <% } else { %>
        <button class="btn primary" style="background-color: #f59e0b; color: white;" onclick="openModal('manageDomainModal')">
          Manage Domain
        </button>
      <% } %>
    <% } %>
  </div>
</div>

<!-- Get Domain Modal -->
<div id="getDomainModal" class="modal-flyout">
  <div class="modal-content">
    <span class="close" onclick="closeModal('getDomainModal')">&times;</span>
    <h3>Get a Custom Domain</h3>
    <p>Choose a custom domain for your store:</p>
    <form action="/multitenant/get-domain" method="POST">
      <input type="text" name="customDomain" placeholder="e.g. joojo-store.com" required>
      <button type="submit" class="btn primary">Reserve Domain</button>
    </form>
  </div>
</div>

<!-- Manage Domain Modal -->
<div id="manageDomainModal" class="modal-flyout">
  <div class="modal-content">
    <span class="close" onclick="closeModal('manageDomainModal')">&times;</span>
    <h3>Manage Your Domain</h3>
    <p>Update your DNS settings or switch domains:</p>
    <div class="form-group">
      <label>Current Domain:</label>
      <input type="text" value="<%= tenant.domain %>" readonly>
    </div>
    <div class="form-group">
      <label>Add or Update DNS Records:</label>
      <textarea placeholder="e.g. A record, CNAME..." rows="6"></textarea>
    </div>
    <button class="btn primary">Save DNS</button>
  </div>
</div>







  </div>

  <!-- Platform Badge -->
  <div class="card">
  <h3>Store Branding & Customization</h3>
  <p class="muted">
    Customize how your store looks and how customers recognize your brand.
  </p>

  <form
    action="/dashboard/store/customize"
    method="POST"
    enctype="multipart/form-data"
  >

    <!-- Store Logo Upload -->
    <div class="form-group" style="margin-bottom:16px;">
      <label><strong>Store Logo</strong></label>
      <p class="muted" style="margin:4px 0 8px;">
        Upload your brand logo (PNG, JPG, SVG recommended)
      </p>
      <input
        type="file"
        name="logo"
        accept="image/*"
      />
    </div>

    <!-- Contact Address -->
    <div class="form-group" style="margin-bottom:16px;">
      <label><strong>Contact Address</strong></label>
      <input
        type="text"
        name="address"
        placeholder="e.g. 12 Adeola Odeku Street, Victoria Island, Lagos"
        style="width:100%; padding:10px; border-radius:8px; border:1px solid #ddd;"
      />
    </div>

    <!-- Primary Color -->
    <div class="form-group" style="margin-bottom:16px;">
      <label><strong>Primary Color</strong></label>
      <input
        type="color"
        name="primaryColor"
        style="width:100%; height:42px; border-radius:8px; border:1px solid #ddd;"
      />
      <small class="muted">
        Used for main buttons, highlights, links, and important actions.
      </small>
    </div>

    <!-- Secondary Color -->
    <div class="form-group" style="margin-bottom:16px;">
      <label><strong>Secondary Color</strong></label>
      <input
        type="color"
        name="secondaryColor"
        style="width:100%; height:42px; border-radius:8px; border:1px solid #ddd;"
      />
      <small class="muted">
        Used for backgrounds, accents, borders, and subtle UI elements.
      </small>
    </div>

    <!-- Actions -->
    <div style="display:flex; gap:12px; flex-wrap:wrap;">
      <button type="submit" class="btn primary">
        Save Customization
      </button>
      <button type="reset" class="btn outline">
        Reset
      </button>
    </div>

  </form>
</div>

</section>
<script>
function openModal(id) {
  document.getElementById(id).classList.add('active');
}

function closeModal(id) {
  document.getElementById(id).classList.remove('active');
}
</script>