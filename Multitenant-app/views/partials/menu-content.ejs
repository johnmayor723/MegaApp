  margin-bottom: 6px;
}

.menu-empty p {
  font-size: 14px;
  color: #6b7280;
  margin-bottom: 16px;
}

.create-menu-btn {
  background: #111827;
  color: #fff;
  border: none;
  padding: 10px 18px;
  border-radius: 8px;
  cursor: pointer;
}

.menu-form-wrapper {
  margin-top: 20px;
  display: none;
}

.menu-form {
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 20px;
  background: #fff;
}

.menu-form h3 {
  margin-bottom: 16px;
  font-size: 18px;
}

.menu-form .form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.menu-form .form-group {
  display: flex;
  flex-direction: column;
  gap: 6px;
  margin-bottom: 14px;
}

.menu-form label {
  font-size: 13px;
  color: #374151;
}

.menu-form input,
.menu-form textarea,
.menu-form select {
  border: 1px solid #d1d5db;
  border-radius: 8px;
  padding: 10px;
}

.menu-form textarea {
  resize: vertical;
}

.menu-form .actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: 12px;
}
</style>


