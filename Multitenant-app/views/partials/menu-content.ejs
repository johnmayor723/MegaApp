<style>
 * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
}

body {
  background: #f6f7f9;
  color: #111827;
}

.page {
  padding: 24px;
}

/* Header */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.page-header h2 {
  font-size: 22px;
}

.actions {
  display: flex;
  gap: 10px;
}

.icon-btn {
  border: 1px solid #d1d5db;
  background: white;
  padding: 6px 10px;
  border-radius: 6px;
  cursor: pointer;
}

.add-btn {
  background: #111827;
  color: white;
  border: none;
  padding: 8px 14px;
  border-radius: 6px;
  cursor: pointer;
}

/* Card */
.card {
  background: white;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  padding: 16px;
}

/* Toolbar */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.search {
  display: flex;
  align-items: center;
  gap: 8px;
  background: #fff;
  border: 1px solid #d1d5db;
  padding: 8px 12px;
  border-radius: 8px;
  width: 380px;
}

.search input {
  border: none;
  outline: none;
  width: 100%;
}

.info {
  color: #6b7280;
  font-size: 14px;
}

.filter-btn {
  border: 1px solid #d1d5db;
  background: white;
  padding: 8px 14px;
  border-radius: 8px;
  cursor: pointer;
}

/* Table */
.table-wrapper {
  overflow-x: auto;
  max-height: 420px;
}

table {
  width: 100%;
  border-collapse: collapse;
  
}

thead {
  background: #f9fafb;
}

th {
  text-align: left;
  font-size: 13px;
  color: #6b7280;
  font-weight: 600;
  padding: 12px;
  border-bottom: 1px solid #e5e7eb;
}

td {
  padding: 14px 12px;
  border-bottom: 1px solid #e5e7eb;
  font-size: 14px;
  white-space: nowrap;
}

tbody tr:hover {
  background: #f9fafb;
}

</style>
<style>
/* ---- Menu empty state + form (isolated) ---- */

.menu-empty {
