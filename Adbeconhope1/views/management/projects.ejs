<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Projects000</title>

  <!-- ✅ Bootstrap 5 CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />

  <style>
    body {
      background-color: #f8f9fa;
    }
    .navbar-brand {
      font-weight: 700;
      color: #141414 !important;
      font-size: 1.3rem;
      letter-spacing: 0.5px;
    }
    .project-card {
      border: 1px solid #dee2e6;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      background-color: #fff;
      transition: all 0.3s ease;
    }
    .project-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }
    .card-title {
      color: #1b1b1c;
      font-weight: 600;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
   <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">AdedoyinBeaconOfHopeFoundation</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/management/projects">Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/management/projects/new">Create Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-danger" href="/">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Project Container -->
 <div class="container mt-5">
  <h1 class="mb-4 text-center">All Projects</h1>

  <% if (projects && projects.length > 0) { %>
    <div class="row">
      <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
          <div class="card project-card h-100">
            
            <% if (project.images && project.images.length > 0) { %>
              <img 
                src="/uploads/<%= project.images[0].filename || project.images[0] %>" 
                class="card-img-top" 
                alt="Project Image" 
                style="height:200px; object-fit:cover;"
              >
            <% } else { %>
              <img 
                src="https://via.placeholder.com/400x200?text=No+Image" 
                class="card-img-top" 
                alt="No Image" 
                style="height:200px; object-fit:cover;"
              >
            <% } %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= project.title %></h5>
              <p class="card-text text-muted">
                <%= project.description ? project.description.substring(0, 100) : '' %>...
              </p>

              <div class="mt-auto d-flex justify-content-between">
                <a 
                  href="/management/projects/<%= project._id %>/edit" 
                  class="btn btn-sm btn-warning"
                >
                  Edit
                </a>

                <form 
                  action="/management/projects/<%= project._id %>?_method=DELETE" 
                  method="POST" 
                  onsubmit="return confirm('Are you sure you want to delete this project?')"
                >
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center py-5">
      <h4 class="text-muted mb-3">No projects found.</h4>
      <a href="/management/projects/new" class="btn btn-primary">+ Create New Project</a>
    </div>
  <% } %>
</div>


  <!-- ✅ Bootstrap 5 JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</body>
</html>
